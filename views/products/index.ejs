<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <title>Product List</title>
</head>

<body>
  <div class="container">
    <h1 class="text-center my-4">Product List</h1>
    <ul class="list-group">
      <% for (let product of products) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h4>
            <%= product.name %>
          </h4>
          <p>$<%= product.price %>
          </p>
          <img class="img-thumbnail w-25 rounded" src="<%= product.image %>" alt="<%= product.name %>">
          <a href="/products/<%= product.id %>" class="btn btn-info">Details</a>
        </li>
        <% } %>
    </ul>
    <a href="/products/new" class="btn btn-primary mt-3">Add Product</a>
  </div>
  <a class="btn btn-secondary  d-flex justify-content-center w-25 mx-auto" href="/">Back to homepage</a>
</body>

</html>